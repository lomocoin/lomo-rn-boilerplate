{
  "name": "lomo-rn-boilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start --transformer node_modules/react-native-typescript-transformer/index.js --sourceExts ts,tsx",
    "test": "jest",
    "lint": "tslint src/**/*.ts",
    "parrot": "parrot",
    "ios": "react-native run-ios",
    "ios-run-release": "react-native run-ios --configuration Release",
    "ios-codepush": "react-native run-ios --configuration Release && appcenter codepush release-react -a LoMoCoinTeam/Lomo-RN-Boilerplate-iOS -d Staging --plist-file ios/LomoRN/Info.plist",
    "android": "react-native run-android",
    "rnn-android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "android-run-release": "react-native run-android --variant=release",
    "android-codepush": "react-native run-android --variant=release && appcenter codepush release-react -a LoMoCoinTeam/Lomo-RN-Boilerplate-Android -d Staging",
    "android-log": "react-native log-android",
    "reset": "watchman watch-del-all && react-native start --reset-cache",
    "translations": "node ./scripts/make-translations.js",
    "android-gen-assets": "yo rn-toolbox:assets --splash ./resources/splash.png --android",
    "record-screen-ios": "xcrun simctl io booted recordVideo appvideo.mov",
    "rename": "node ./scripts/rename.js"
  },
  "dependencies": {
    "appcenter": "^1.7.1",
    "appcenter-analytics": "^1.7.1",
    "appcenter-crashes": "^1.7.1",
    "axios": "^0.19.0-beta.1",
    "mobx": "~4.0.0",
    "mobx-logger": "^0.7.1",
    "mobx-persist": "^0.4.1",
    "mobx-react": "^5.2.5",
    "moment": "^2.22.2",
    "parrot": "git+https://github.com/lomocoin/parrot#f55c4a0365f6253cfcb97a8be4811871b43a8a51",
    "react": "16.4.2",
    "react-native": "0.56.0",
    "react-native-code-push": "^5.4.1",
    "react-native-device-info": "^0.22.4",
    "react-native-i18n": "^2.0.15",
    "react-native-navigation": "^2.0.2576",
    "react-native-splash-screen": "^3.1.1",
    "react-native-toast-native": "git+https://github.com/lomocoin/react-native-toast-native#4a49c3e656d92e17d80a16824b56634c6bc4b22a",
    "react-native-vector-icons": "^5.0.0",
    "react-navigation": "2.11.2",
    "rxjs": "^6.2.2"
  },
  "devDependencies": {
    "@types/react": "^16.4.9",
    "@types/react-native": "^0.56.7",
    "@types/react-native-i18n": "^2.0.0",
    "@types/react-native-vector-icons": "^4.6.2",
    "@types/react-navigation": "^2.0.15",
    "babel-jest": "23.4.2",
    "babel-preset-react-native": "^5",
    "eslint": "^5.3.0",
    "jest": "23.5.0",
    "node-xlsx": "^0.12.1",
    "prettier-eslint": "^8.8.2",
    "react-addons-test-utils": "^15.6.2",
    "react-native-typescript-transformer": "^1.2.10",
    "react-test-renderer": "16.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "<rootDir>/node_modules/appcenter/test/AppCenterMock.js",
      "<rootDir>/node_modules/appcenter-analytics/test/AppCenterAnalyticsMock.js",
      "<rootDir>/node_modules/appcenter-crashes/test/AppCenterCrashesMock.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
